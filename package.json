{
  "name": "voice-bridge-translator",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "concurrently \"pnpm run server\" \"pnpm run dev\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:all": "pnpm run build && pnpm run build:server",
    "build:server": "tsc api/server.ts --outDir dist/api --target es2020 --module commonjs --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "server": "tsx api/server.ts",
    "deploy": "pnpm run build:all && pnpm run migrate:prod",
    "vercel-build": "pnpm run build && pnpm run build:server",
    "migrate": "node scripts/migrate.js",
    "migrate:prod": "NODE_ENV=production node scripts/migrate.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:ci": "echo \"CI tests not implemented yet\"",
    "quick-start": "node setup-env.js && pnpm run start"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@neondatabase/serverless": "^0.9.5",
    "@sentry/node": "^9.34.0",
    "ably": "^2.10.0",
    "cors": "^2.8.5",
    "country-flag-icons": "^1.5.19",
    "deepl-node": "^1.19.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "groq-sdk": "^0.19.0",
    "helmet": "^7.2.0",
    "iso-639-1": "^3.1.5",
    "lucide-react": "^0.344.0",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.0.10",
    "@types/pg": "^8.15.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.0.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}
